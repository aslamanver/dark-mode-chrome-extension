{
  "name": "Dark Mode",
  "description": "Enable/Disable Dark mode for each sites you wish",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "commands": {
    "inject-script": {
      "suggested_key": "Ctrl+Q",
      "description": "Enable/Disable Dark Mode"
    }
  },
  "action": {},
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}